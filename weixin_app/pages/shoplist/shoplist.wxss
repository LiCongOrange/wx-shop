/*1:组件白色背景*/
page{
  background-color:#fff;
}
/*2:当前商品条目*/
.shop{
  padding:20rpx;
  border-bottom: 1rpx solid #ddd;
  display: flex;
  position: relative
}
/*3:当前商品图片*/
.shop-img{
  width:160rpx;
  height:160rpx;
  margin-right:20rpx;
}
/*4:商品信息*/
.shop-info{
   width:520rpx;
   font-size:12px;
   color:#666;
   display: flex;
   flex-direction: column;
   line-height: 1.5;
}
/*5:店铺名称*/
.shop-title{
   font-size:16px;
   color:#333;
   width:380rpx;
}
/*6:打分*/
.shop-star{
  position: absolute;  /*打分区域绝对定位*/
  right:20rpx;         /*右侧*/
  top:20rpx;           /*顶端*/
}
.start-after{
  color:#e2e2e2;       /*灰色*/
}
.start-before{
 color:#f19e38;         /*橙色*/
 position: absolute;
 top:0;
 left:0;
 width:75%;             /*分数*/
 overflow: hidden;
}
.btn-show-store-detail{
 padding-left: 10px;
  border:1px solid transparent;
}
.slider,.slider swiper,.slider image{
  height:390rpx;
  width:100%;
}
